{% extends "FulldonIntersaBundle::coque_intersa.html.twig" %}
    {% block coque_intersa %}
<div class="page-content">
<div class="breadcrumbs" id="breadcrumbs">
    <ol class="breadcrumb">
        <li><a href="{{ path('fulldon_intersa_homepage') }}">Accueil</a></li>
        <li ><a href="{{ path('intersa_upgrade') }}">Mise à niveau de Fulldon</a></li>
        <li class="active">Confirmation de l'abonnement </li>
    </ol>
</div>

<!-- /section:settings.box -->
<div class="row">
    <div class="col-xs-12">
        <!-- PAGE CONTENT BEGINS -->
        <div class="space-6"></div>

        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <!-- #section:pages/invoice -->
                <div class="widget-box transparent">
                    <div class="widget-header widget-header-large">
                        <h3 class="widget-title grey lighter">
                            <img src="{{ asset('img/avatar.png') }}" /> Validation de l'abonnement
                        </h3>
                    </div>
            <form action="{{ path('intersa_upgrade_confirmation',{'level': level }) }}" method="POST" >
                    <div class="widget-body">
                        <div class="widget-main padding-24">
                            <div class="row">
                                <div class="col-sm-6">

                                    <div class="row">
                                        <b>Adresse de facturation</b>
                                        <hr />
                                    </div>

                                    <div>
                                        <ul class="list-unstyled spaced">
                                            <li>
                                                <i class="ace-icon fa fa-caret-right blue"></i><input type="text" name="adresse" placeholder="adresse"/>
                                            </li>

                                            <li>
                                                <i class="ace-icon fa fa-caret-right blue"></i><input type="text" name="zipcode"placeholder="code postal" />
                                            </li>

                                            <li>
                                                <i class="ace-icon fa fa-caret-right blue"></i><input type="text" name="ville" placeholder="Ville"/>
                                            </li>
                                            <li>
                                                <i class="ace-icon fa fa-caret-right blue"></i><input type="text" name="Pays" placeholder="pays"/>
                                            </li>


                                            <li class="divider"></li>

                                        </ul>
                                    </div>
                                </div><!-- /.col -->
                                <div class="col-sm-6">
                                    <div class="row">
                                        <b>Moyens de paiement</b>
                                        <hr />
                                    </div>
                                    <div style="float:left;margin-right: 5px;">
                                        <label>
                                            <input type="radio" name="payment_method" id="payment_method_1" value="VISA" {% if data['cb_payment_method'] is defined and data['cb_payment_method']=='VISA' %} checked="checked" {% endif %} onChange="cb_mp_onChange(this)" > <img alt="visa" src="{{ asset('img/visa.png') }}"  />
                                        </label>
                                    </div>
                                    <div style="float:left;margin-right: 5px;">
                                        <label>
                                            <input type="radio" name="payment_method" value="MasterCard" id="payment_method_2" {% if data['cb_payment_method'] is defined and data['cb_payment_method']=='MasterCard' %} checked="checked" {% endif %} onChange="cb_mp_onChange(this)" > <img alt="mastercard" src="{{ asset('img/mastercard.png') }}" />
                                        </label>
                                    </div>
                                    <div  style="float:left;margin-right: 5px;" >
                                        <label>
                                            <input type="radio" name="payment_method" value="PAYPAL" id="payment_method_3" {% if data['cb_payment_method'] is defined and data['cb_payment_method']=='PAYPAL' %} checked="checked" {% endif %} onChange="cb_mp_onChange(this)"> <img alt="paypal"  src="{{ asset('img/paypal.png') }}" />
                                        </label>
                                    </div>
                                </div>
                            </div><!-- /.row -->

                            <div class="space"></div>

                            <div>
                                <table class="table table-striped table-bordered">
                                    <thead>
                                    <tr>
                                        <th class="center">#</th>
                                        <th>Product</th>
                                        <th class="hidden-xs">Description</th>
                                        <th class="hidden-480">Discount</th>
                                        <th>Total</th>
                                    </tr>
                                    </thead>

                                    <tbody>
                                    <tr>
                                        <td class="center">1</td>

                                        <td>
                                            <a href="#">{{ product }}</a>
                                        </td>
                                        <td class="hidden-xs">
                                            {{ desc }}
                                        </td>
                                        <td class="hidden-480"> --- </td>
                                        <td>{{ price }} € /mois </td>
                                    </tr>

                                    </tbody>
                                </table>
                            </div>

                            <div class="hr hr8 hr-double hr-dotted"></div>

                            <div class="row">
                                <div class="col-sm-5 pull-right">
                                    <h4 class="pull-right">
                                        Montant total :
                                        <span class="red">{{ price }} €/mois</span>
                                    </h4>
                                </div>
                            </div>

                            <div class="space-6"></div>
                            <div class="well">
                                <input type="submit" class="btn btn-primary " value="Confirmer l'abonnement">
                            </div>
                        </div>
            </form>
                    </div>

                </div>

                <!-- /section:pages/invoice -->
            </div>
        </div>

        <!-- PAGE CONTENT ENDS -->
    </div><!-- /.col -->
</div><!-- /.row -->
</div>
    {% endblock %}
    {% block javascripts %}
        {{ parent() }}
    {% endblock %}